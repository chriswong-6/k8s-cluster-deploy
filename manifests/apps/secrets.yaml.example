# Application Secrets Template
# Copy this file to secrets.yaml and fill in the values.
# DO NOT commit secrets.yaml to version control.
#
# The deploy script will auto-generate this from .env variables.
# You can also create it manually using:
#   kubectl create secret generic app-secrets -n openfaas-fn \
#     --from-literal=hf-token=YOUR_HF_TOKEN
---
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: openfaas-fn
type: Opaque
stringData:
  hf-token: "<YOUR_HF_TOKEN>"
---
# NGC Docker Registry Secret (for pulling NVIDIA images)
# Create with:
#   kubectl create secret docker-registry ngc-secret -n openfaas-fn \
#     --docker-server=nvcr.io \
#     --docker-username='$oauthtoken' \
#     --docker-password=YOUR_NGC_API_KEY
apiVersion: v1
kind: Secret
metadata:
  name: ngc-secret
  namespace: openfaas-fn
type: kubernetes.io/dockerconfigjson
data:
  .dockerconfigjson: "<BASE64_ENCODED_DOCKER_CONFIG>"
